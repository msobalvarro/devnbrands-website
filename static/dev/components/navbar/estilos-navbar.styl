.nav-bar
	background-color rgba(0, 0, 0, 0.95)
	align-items center
	position fixed
	display flex
	justify-content flex-end
	top 0px
	left 0px
	right 0px
	border-bottom 2px solid #4d4d4d
	position relative
	z-index 100

	.name
		position absolute
		color #FFF
		font-size 1em
		left 1%
	
	a
		text-decoration none
		padding 1em
		margin 0px 5px
		font-weight lighter
		color #FFF
		transition all 0.2s ease
		
		&:hover
			background-color rgba(250, 250, 250, 0.2)
			
		&.active
			background-color rgba(250, 250, 250, 0.2)
		
