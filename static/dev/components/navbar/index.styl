.nav-bar
	background-color rgba(0, 0, 0, 0.95)
	position fixed
	display flex
	justify-content flex-end
	top 0px
	left 0px
	right 0px
	z-index 100
	
	a
		text-decoration none
		padding 1em
		margin 0px 5px
		font-weight lighter
		color #FFF
		transition all 0.2s ease
		
		&:hover
			background-color rgba(250, 250, 250, 0.2)
		
