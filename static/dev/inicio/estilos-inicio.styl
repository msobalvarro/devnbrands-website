.content-main 
    background-color #302F2F
    
    p
        &.descripcion
            color #95989A
            font-size 28px
            text-align center
            font-weight lighter
            width 75%
            margin 75px auto

    .marketing
        display flex
        justify-content space-evenly
        margin-bottom 50px
        overflow visible
        .item
            background-color rgba(240, 240, 240, 0.25)
            box-shadow 0 15px 25px 0px rgba(0, 0, 0, 0.5)
            border-radius 5px
            // text-align center
            display flex
            flex-direction column
            justify-content center
            align-items center
            padding 20px 0
            width 35%
            img 
                max-width 60%
            .title-item
                color #A8F296
                margin 10px 0
                text-align center
                font-size 1em
            p
                color #FFFFFF
                text-align center
                width 80%
    
.gestion-hosting
    background-image url('../../img/baner-site.png')
    background-repeat no-repeat
    background-attachment fixed
    background-position center center
    padding 25px 0
    display flex
    flex-direction column
    align-items center

    .search-simulation
        background-color rgba(83, 83, 83, 0.65)
        background-image url('../../img/star.png')
        background-repeat no-repeat
        background-position 98% center
        background-size 30px
        color #E4EBEF
        padding 10px
        padding-left 25px
        border-radius 30px
        font-size 2em
        width 80%

    p
        color #C4D1D9
        margin 15px auto

    .btn-getStart
        background-color #ABFF00
        border-radius 5px
        color #2d2d2d
        text-decoration none
        padding 12px
        font-weight bold