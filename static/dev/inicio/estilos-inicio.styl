.content-main 
    background-color #302F2F
    
    p
        &.descripcion
            color #95989A
            font-size 28px
            text-align center
            font-weight lighter
            width 75%
            margin 75px auto

    .marketing
        display flex
        justify-content space-evenly
        margin-bottom 50px
        overflow visible
        .item
            background-color rgba(240, 240, 240, 0.25)
            box-shadow 0 15px 25px 0px rgba(0, 0, 0, 0.5)
            border-radius 5px
            // text-align center
            display flex
            flex-direction column
            justify-content center
            align-items center
            padding 20px 0
            width 35%
            img 
                max-width 60%
            .title-item
                color #A8F296
                margin 10px 0
                text-align center
                font-size 1em
            p
                color #FFFFFF
                text-align center
                width 80%